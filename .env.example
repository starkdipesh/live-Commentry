# Saarthika Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Groq API Key
# Get it from: https://console.groq.com/keys
GROQ_API_KEY=your_api_key_here

# OPTIONAL: Advanced Configuration
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
GROQ_MAX_TOKENS=150
GROQ_TEMPERATURE=0.8

# Screen Capture Settings
CAPTURE_INTERVAL=15  # seconds between captures (lower = more frequent)
CAPTURE_QUALITY=85   # JPEG quality (1-100, higher = better quality)
CAPTURE_WIDTH=1280   # Screen capture width
CAPTURE_HEIGHT=720   # Screen capture height

# TTS Voice Settings
TTS_VOICE=hi-IN-SwaraNeural  # Female Hindi voice
TTS_RATE=+15%                # Speech rate

# Dataset Settings
DATASET_PATH=training_data/gold_dataset
